version "0.1"
package "genmat"

purpose "generate a random matrix of given size"

option "size" s "matrix size"
       int optional default="16"

option "min-value" m "minimum value for x"
       double optional default="-100.0"

option "max-value" M "maximum value for x"
       double optional default="100.0"

option "binary" b "output matrix in binary format"
       flag off

option "force" f "force binary output on terminal"
       flag off